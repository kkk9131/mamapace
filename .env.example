# SUPABASE CONFIGURATION
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ENCRYPTION CONFIGURATION (SERVER-SIDE ONLY)
# These should NEVER be exposed to the client
MATERNAL_HEALTH_ENCRYPTION_KEY=your-256-bit-encryption-key-here
ENCRYPTION_KEY_ROTATION_SCHEDULE=monthly

# SESSION CONFIGURATION
SESSION_TOKEN_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=30
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION_MINUTES=30

# SECURITY CONFIGURATION
ENABLE_SECURITY_LOGGING=true
ENABLE_AUDIT_TRAIL=true
ENABLE_RATE_LIMITING=true
API_RATE_LIMIT_PER_MINUTE=60

# DEVELOPMENT ONLY (Remove in production)
ENABLE_DEBUG_LOGGING=false
BYPASS_ENCRYPTION_FOR_TESTING=false